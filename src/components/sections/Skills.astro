---
// Complete tech stack from profile with icons
const skillGroups = [
    {
        category: "Backend",
        skills: [
            { name: "PHP", icon: "php" },
            { name: "Laravel", icon: "laravel" },
            { name: "Livewire", icon: "livewire" },
            { name: "Filament", icon: "php" },
            { name: "Node.js", icon: "nodedotjs" },
            { name: "Express.js", icon: "express" },
            { name: "REST APIs", icon: "openapiinitiative" },
            { name: "GraphQL", icon: "graphql" },
        ],
    },
    {
        category: "Frontend",
        skills: [
            { name: "JavaScript", icon: "javascript" },
            { name: "Vue 3", icon: "vuedotjs" },
            { name: "Alpine.js", icon: "alpinedotjs" },
            { name: "jQuery", icon: "jquery" },
            { name: "Tailwind CSS", icon: "tailwindcss" },
            { name: "Bootstrap", icon: "bootstrap" },
            { name: "Sass", icon: "sass" },
            { name: "Vite", icon: "vite" },
        ],
    },
    {
        category: "Databases",
        skills: [
            { name: "MySQL", icon: "mysql" },
            { name: "PostgreSQL", icon: "postgresql" },
            { name: "MongoDB", icon: "mongodb" },
            { name: "InfluxDB", icon: "influxdb" },
        ],
    },
    {
        category: "DevOps & Tools",
        skills: [
            { name: "Docker", icon: "docker" },
            { name: "Git", icon: "git" },
            { name: "GitHub Actions", icon: "githubactions" },
            { name: "Linux", icon: "linux" },
            { name: "Nginx", icon: "nginx" },
            { name: "AWS", icon: "amazonwebservices" },
        ],
    },
    {
        category: "Testing",
        skills: [
            { name: "Pest", icon: "php" },
            { name: "Jest", icon: "jest" },
            { name: "Vitest", icon: "vitest" },
        ],
    },
];
---

<section id="skills" class="section gradient-bg relative overflow-hidden">
    <!-- Decorative background -->
    <div class="absolute inset-0 opacity-50">
        <div
            class="absolute top-20 left-10 w-32 h-32 bg-primary-200 rounded-full blur-3xl"
        >
        </div>
        <div
            class="absolute bottom-20 right-10 w-40 h-40 bg-violet-200 rounded-full blur-3xl"
        >
        </div>
    </div>

    <div class="container relative z-10">
        <!-- Centered Header -->
        <div class="section-header">
            <h2 class="section-title-gradient">Tech Stack</h2>
            <p class="section-subtitle">
                Technologies I use daily to build scalable applications
            </p>
        </div>

        <div class="space-y-10 max-w-4xl mx-auto">
            {
                skillGroups.map((group) => (
                    <div class="text-center">
                        <h3 class="inline-block text-sm font-semibold text-neutral-500 uppercase tracking-wider mb-5 px-4 py-1.5 bg-white/60 backdrop-blur-sm rounded-full border border-neutral-200/50">
                            {group.category}
                        </h3>
                        <div class="flex flex-wrap justify-center gap-3">
                            {group.skills.map((skill) => (
                                <div
                                    class="skill-badge group"
                                    title={skill.name}
                                >
                                    <img
                                        src={`https://cdn.simpleicons.org/${skill.icon}`}
                                        alt=""
                                        class="w-5 h-5 grayscale group-hover:grayscale-0 transition-all duration-300"
                                        loading="lazy"
                                        onerror="this.style.display='none'"
                                    />
                                    <span class="text-sm font-medium text-neutral-600 group-hover:text-neutral-900 transition-colors">
                                        {skill.name}
                                    </span>
                                </div>
                            ))}
                        </div>
                    </div>
                ))
            }
        </div>
    </div>
</section>

<style>
    .skill-badge {
        @apply inline-flex items-center gap-2.5 px-4 py-2.5 bg-white/80 backdrop-blur-sm border border-neutral-200/50 rounded-xl hover:border-primary-300 hover:bg-white hover:shadow-lg hover:shadow-primary-100/50 hover:-translate-y-0.5 transition-all duration-300 cursor-default;
    }
</style>
