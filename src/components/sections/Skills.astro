---
// Skills with SVG icons for popular technologies
const skills = [
    // Backend
    { name: "PHP", icon: "php", category: "Backend" },
    { name: "Laravel", icon: "laravel", category: "Backend" },
    { name: "Livewire", icon: "livewire", category: "Backend" },
    { name: "Node.js", icon: "nodejs", category: "Backend" },
    { name: "GraphQL", icon: "graphql", category: "Backend" },
    // Frontend
    { name: "JavaScript", icon: "javascript", category: "Frontend" },
    { name: "Vue.js", icon: "vue", category: "Frontend" },
    { name: "Alpine.js", icon: "alpine", category: "Frontend" },
    { name: "Tailwind", icon: "tailwind", category: "Frontend" },
    // Database
    { name: "MySQL", icon: "mysql", category: "Database" },
    { name: "PostgreSQL", icon: "postgresql", category: "Database" },
    { name: "MongoDB", icon: "mongodb", category: "Database" },
    // DevOps
    { name: "Docker", icon: "docker", category: "DevOps" },
    { name: "Git", icon: "git", category: "DevOps" },
    { name: "Linux", icon: "linux", category: "DevOps" },
    { name: "AWS", icon: "aws", category: "DevOps" },
];
---

<section id="skills" class="section bg-white">
    <div class="container">
        <h2 class="section-title">Tech Stack</h2>
        <p class="section-subtitle max-w-2xl">
            Technologies I use to build scalable applications.
        </p>

        <div class="flex flex-wrap gap-3 justify-center md:justify-start">
            {
                skills.map((skill) => (
                    <div class="skill-badge group" title={skill.name}>
                        <img
                            src={`https://cdn.simpleicons.org/${skill.icon}`}
                            alt={skill.name}
                            class="w-5 h-5 grayscale group-hover:grayscale-0 transition-all"
                            loading="lazy"
                        />
                        <span class="text-sm font-medium text-neutral-700 group-hover:text-neutral-900">
                            {skill.name}
                        </span>
                    </div>
                ))
            }
        </div>
    </div>
</section>

<style>
    .skill-badge {
        @apply inline-flex items-center gap-2 px-4 py-2.5 bg-neutral-50 border border-neutral-200 rounded-lg hover:border-primary-300 hover:bg-primary-50 transition-all cursor-default;
    }
</style>
