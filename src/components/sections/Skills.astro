                            {category.skills.map((skill) => (
                                <li class="flex items-center gap-2 text-neutral-600">
                                    <svg
                                        class="w-4 h-4 text-primary-500 flex-shrink-0"
                                        fill="none"
                                        stroke="currentColor"
                                        viewBox="0 0 24 24"
                                    >
                                        <path
                                            stroke-linecap="round"
                                            stroke-linejoin="round"
                                            stroke-width="2"
                                            d="M5 13l4 4L19 7"
