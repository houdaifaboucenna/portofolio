---
// Complete tech stack from profile with icons
const skillGroups = [
    {
        category: "Backend & Databases",
        skills: [
            { name: "PHP", icon: "php" },
            { name: "Laravel", icon: "laravel" },
            { name: "Livewire", icon: "livewire" },
            { name: "Filament", icon: "php" },
            { name: "Node.js", icon: "nodedotjs" },
            { name: "Express.js", icon: "express" },
            { name: "MySQL", icon: "mysql" },
            { name: "PostgreSQL", icon: "postgresql" },
            { name: "MongoDB", icon: "mongodb" },
        ],
    },
    {
        category: "Frontend & UI",
        skills: [
            { name: "JavaScript", icon: "javascript" },
            { name: "Vue 3", icon: "vuedotjs" },
            { name: "Alpine.js", icon: "alpinedotjs" },
            { name: "jQuery", icon: "jquery" },
            { name: "Tailwind CSS", icon: "tailwindcss" },
            { name: "Bootstrap", icon: "bootstrap" },
            { name: "Sass", icon: "sass" },
            { name: "Vite", icon: "vite" },
        ],
    },
    {
        category: "Tools & Infrastructure",
        skills: [
            { name: "Docker", icon: "docker" },
            { name: "Git", icon: "git" },
            { name: "GitHub Actions", icon: "githubactions" },
            { name: "Linux", icon: "linux" },
            { name: "Nginx", icon: "nginx" },
            { name: "AWS", icon: "amazonwebservices" },
            { name: "Jest", icon: "jest" },
            { name: "Vitest", icon: "vitest" },
        ],
    },
];
---

<section id="skills" class="section gradient-bg relative overflow-hidden">
    <!-- Decorative background -->
    <div class="absolute inset-0 opacity-50">
        <div
            class="absolute top-20 left-10 w-32 h-32 bg-primary-200 rounded-full blur-3xl"
        >
        </div>
        <div
            class="absolute bottom-20 right-10 w-40 h-40 bg-secondary-200 rounded-full blur-3xl"
        >
        </div>
    </div>

    <div class="container relative z-10">
        <!-- Centered Header -->
        <div class="section-header">
            <h2 class="section-title-gradient">Tech Stack</h2>
            <p class="section-subtitle">
                Technologies I use daily to build scalable applications
            </p>
        </div>

        <div
            class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8 max-w-5xl mx-auto"
        >
            {
                skillGroups.map((group) => (
                    <div class="bg-white/40 backdrop-blur-sm rounded-2xl p-6 border border-white/50 hover:border-primary-200 transition-all duration-300">
                        <h3 class="text-sm font-semibold text-primary-700 uppercase tracking-wider mb-6 pb-2 border-b border-primary-100 flex items-center gap-2">
                            <span class="w-1.5 h-1.5 rounded-full bg-primary-500" />
                            {group.category}
                        </h3>
                        <div class="space-y-4">
                            {group.skills.map((skill) => (
                                <div
                                    class="group flex items-center gap-3 cursor-default"
                                    title={skill.name}
                                >
                                    <div class="w-10 h-10 rounded-xl bg-white shadow-sm border border-neutral-100 flex items-center justify-center p-2.5 group-hover:scale-110 group-hover:shadow-md transition-all duration-300">
                                        <img
                                            src={`https://cdn.simpleicons.org/${skill.icon}`}
                                            alt=""
                                            class="w-full h-full object-contain filter grayscale group-hover:grayscale-0 transition-all duration-300"
                                            loading="lazy"
                                            onerror="this.style.display='none'"
                                        />
                                    </div>
                                    <span class="text-sm font-medium text-neutral-600 group-hover:text-primary-600 transition-colors">
                                        {skill.name}
                                    </span>
                                </div>
                            ))}
                        </div>
                    </div>
                ))
            }
        </div>
    </div>
</section>

