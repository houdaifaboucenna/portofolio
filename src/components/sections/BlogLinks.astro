---
import blogLinksData from "../../data/blog-links.json";

interface Props {
    limit?: number;
    showViewAll?: boolean;
}

const { limit, showViewAll = false } = Astro.props;

const articles = limit
    ? blogLinksData.articles.slice(0, limit)
    : blogLinksData.articles;

const platformColors: Record<string, string> = {
    Medium: "bg-green-100 text-green-700",
    "Dev.to": "bg-purple-100 text-purple-700",
};

function formatDate(dateString: string): string {
    return new Date(dateString).toLocaleDateString("en-US", {
        year: "numeric",
        month: "short",
        day: "numeric",
    });
}
---

<section id="blog" class="section bg-neutral-50">
    <div class="container">
        <div
            class="flex flex-wrap items-end justify-between gap-4 mb-8 md:mb-12"
        >
            <div>
                <h2 class="section-title mb-2">Blog & Writing</h2>
                <p class="text-lg text-neutral-600">
                    Technical articles and insights I've shared.
                </p>
            </div>
            {
                showViewAll && (
                    <a
                        href="/blog"
                        class="text-primary-600 hover:text-primary-700 font-medium inline-flex items-center gap-2 transition-colors"
                    >
                        View all articles
                        <svg
                            class="w-4 h-4"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M17 8l4 4m0 0l-4 4m4-4H3"
                            />
                        </svg>
                    </a>
                )
            }
        </div>

        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
            {
                articles.map((article) => (
                    <a
                        href={article.url}
                        target="_blank"
                        rel="noopener noreferrer"
                        class="card group p-6 hover:border-primary-200"
                    >
                        <div class="flex items-center gap-3 mb-3">
                            <span
                                class:list={[
                                    "badge text-xs",
                                    platformColors[article.platform] ||
                                        "badge-neutral",
                                ]}
                            >
                                {article.platform}
                            </span>
                            <span class="text-sm text-neutral-500">
                                {formatDate(article.publishDate)}
                            </span>
                        </div>
                        <h3 class="font-semibold text-neutral-900 mb-2 group-hover:text-primary-600 transition-colors">
                            {article.title}
                        </h3>
                        <p class="text-sm text-neutral-600 line-clamp-2">
                            {article.excerpt}
                        </p>
                        <div class="mt-4 flex items-center gap-1 text-primary-600 text-sm font-medium">
                            <span>Read on {article.platform}</span>
                            <svg
                                class="w-4 h-4 group-hover:translate-x-1 transition-transform"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
                                />
                            </svg>
                        </div>
                    </a>
                ))
            }
        </div>
    </div>
</section>

<style>
    .line-clamp-2 {
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }
</style>
