---
import blogLinksData from "../../data/blog-links.json";

interface Props {
    limit?: number;
    showViewAll?: boolean;
    showTitle?: boolean;
}

const { limit, showViewAll = false, showTitle = true } = Astro.props;

const articles = limit
    ? blogLinksData.articles.slice(0, limit)
    : blogLinksData.articles;

const platformColors: Record<string, string> = {
    Medium: "bg-primary-100/80 text-primary-700",
    "Dev.to": "bg-secondary-100/80 text-secondary-700",
};

function formatDate(dateString: string): string {
    return new Date(dateString).toLocaleDateString("en-US", {
        year: "numeric",
        month: "short",
        day: "numeric",
    });
}
---

<section id="blog" class="section bg-white">
    <div class="container">
        <!-- Centered Header -->
        {
            showTitle && (
                <div class="section-header">
                    <h2 class="section-title">Blog & Writing</h2>
                    <p class="section-subtitle">
                        Technical articles and insights I've shared
                    </p>
                    {showViewAll && (
                        <a
                            href="/blog"
                            class="link-animated inline-flex items-center gap-2 mt-4"
                        >
                            View all articles
                            <svg
                                class="w-4 h-4"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M17 8l4 4m0 0l-4 4m4-4H3"
                                />
                            </svg>
                        </a>
                    )}
                </div>
            )
        }

        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6 max-w-6xl mx-auto">
            {
                articles.map((article) => (
                    <a
                        href={article.url}
                        target="_blank"
                        rel="noopener noreferrer"
                        class="group bg-white/70 backdrop-blur-sm p-6 rounded-2xl border border-neutral-200/50 hover:border-primary-200 hover:shadow-xl hover:shadow-primary-100/30 hover:-translate-y-1 transition-all duration-300"
                    >
                        <div class="flex items-center gap-3 mb-3">
                            <span
                                class:list={[
                                    "badge text-xs backdrop-blur-sm",
                                    platformColors[article.platform] ||
                                        "badge-neutral",
                                ]}
                            >
                                {article.platform}
                            </span>
                            <span class="text-sm text-neutral-500">
                                {formatDate(article.publishDate)}
                            </span>
                        </div>
                        <h3 class="font-semibold text-neutral-900 mb-2 group-hover:text-primary-600 transition-colors">
                            {article.title}
                        </h3>
                        <p class="text-sm text-neutral-600 line-clamp-2">
                            {article.excerpt}
                        </p>
                        <div class="mt-4 flex items-center gap-1 text-primary-600 text-sm font-medium">
                            <span>Read on {article.platform}</span>
                            <svg
                                class="w-4 h-4 group-hover:translate-x-1 transition-transform"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
                                />
                            </svg>
                        </div>
                    </a>
                ))
            }
        </div>
    </div>
</section>

<style>
    .line-clamp-2 {
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }
</style>
