---
interface Props {
    brief?: boolean;
}

const { brief = false } = Astro.props;

const highlights = [
    { number: "6+", label: "Years Experience" },
    { number: "20+", label: "Projects Delivered" },
    { number: "4+", label: "Companies" },
];
---

<section id="about" class="section bg-white">
    <div class="container">
        <div class="max-w-3xl">
            <h2 class="section-title">About Me</h2>

            <p class="text-lg text-neutral-600 leading-relaxed mb-6">
                Full-Stack Developer specialized in <strong
                    class="text-neutral-800">Laravel</strong
                > and modern JavaScript. I build complete systems â€” from responsive
                interfaces to backend architecture, APIs, and infrastructure.
            </p>

            <p class="text-neutral-600 leading-relaxed mb-8">
                Comfortable with SQL and NoSQL databases, DevOps workflows, and
                microservices architecture. Focused on clean code, performance,
                and solving real-world problems.
            </p>

            <!-- Highlights -->
            <div class="flex flex-wrap gap-8 mb-6">
                {
                    highlights.map((item) => (
                        <div class="text-center">
                            <div class="text-3xl font-bold text-primary-600">
                                {item.number}
                            </div>
                            <div class="text-sm text-neutral-500">
                                {item.label}
                            </div>
                        </div>
                    ))
                }
            </div>

            {
                !brief && (
                    <a
                        href="/about"
                        class="inline-flex items-center gap-2 text-primary-600 hover:text-primary-700 font-medium transition-colors"
                    >
                        Read full bio
                        <svg
                            class="w-4 h-4"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M17 8l4 4m0 0l-4 4m4-4H3"
                            />
                        </svg>
                    </a>
                )
            }
        </div>
    </div>
</section>
