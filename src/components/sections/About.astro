---
interface Props {
    brief?: boolean;
}

const { brief = false } = Astro.props;

const stats = [
    { value: "6+", label: "Years Experience" },
    { value: "20+", label: "Projects Delivered" },
    { value: "4", label: "Companies" },
];
---

<section id="about" class="section bg-white">
    <div class="container">
        <!-- Centered Header -->
        <div class="section-header">
            <h2 class="section-title">About Me</h2>
            <p class="section-subtitle">
                Full-Stack Developer passionate about building scalable web
                applications
            </p>
        </div>

        <!-- Content Card -->
        <div class="max-w-3xl mx-auto">
            <div class="card-glass p-8 md:p-10 text-center">
                <p class="text-lg text-neutral-600 leading-relaxed mb-4">
                    Full-Stack Developer with <strong class="text-neutral-900"
                        >6+ years</strong
                    >
                    of experience building scalable web applications across freelance,
                    remote, and hybrid environments.
                </p>

                <p class="text-neutral-600 leading-relaxed mb-8">
                    Specialized in <strong class="text-neutral-900"
                        >Laravel</strong
                    >
                    with strong front-end foundations. I design complete systems â€”
                    from responsive interfaces to APIs, databases, and server infrastructure.
                    Focused on clean code, performance, and real-world problem solving.
                </p>

                <!-- Stats - Horizontal centered -->
                <div
                    class="flex flex-wrap justify-center gap-8 md:gap-12 mb-8 pt-8 border-t border-neutral-100"
                >
                    {
                        stats.map((stat) => (
                            <div class="text-center">
                                <div class="text-3xl md:text-4xl font-bold bg-gradient-to-r from-primary-600 to-violet-600 bg-clip-text text-transparent">
                                    {stat.value}
                                </div>
                                <div class="text-sm text-neutral-500 mt-1">
                                    {stat.label}
                                </div>
                            </div>
                        ))
                    }
                </div>

                {
                    !brief && (
                        <a
                            href="/about"
                            class="link-animated inline-flex items-center gap-2"
                        >
                            Read full bio
                            <svg
                                class="w-4 h-4"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M17 8l4 4m0 0l-4 4m4-4H3"
                                />
                            </svg>
                        </a>
                    )
                }
            </div>
        </div>
    </div>
</section>
