---
import experienceData from '../../data/experience.json';
---

<section id="experience" class="section bg-white">
  <div class="container">
    <h2 class="section-title">Experience</h2>
    <p class="section-subtitle max-w-2xl">
      My professional journey and key accomplishments.
    </p>
    
    <div class="max-w-3xl">
      <div class="relative">
        <!-- Timeline line -->
        <div class="absolute left-0 md:left-8 top-0 bottom-0 w-px bg-neutral-200"></div>
        
        <!-- Experience items -->
        <div class="space-y-12">
          {experienceData.experiences.map((exp, index) => (
            <div class="relative pl-8 md:pl-20">
              <!-- Timeline dot -->
              <div class="absolute left-0 md:left-8 top-0 w-3 h-3 -translate-x-1/2 rounded-full bg-primary-500 ring-4 ring-white"></div>
              
              <!-- Content -->
              <div class="bg-neutral-50 p-6 rounded-xl border border-neutral-100">
                <div class="flex flex-wrap items-center gap-3 mb-3">
                  <h3 class="font-semibold text-lg text-neutral-900">{exp.role}</h3>
                  <span class="badge badge-primary">{exp.context}</span>
                </div>
                <p class="text-sm text-neutral-500 mb-4">{exp.period}</p>
                <ul class="space-y-2">
                  {exp.responsibilities.map(resp => (
                    <li class="flex items-start gap-2 text-neutral-600 text-sm">
                      <svg class="w-4 h-4 text-primary-500 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                      </svg>
                      <span>{resp}</span>
                    </li>
                  ))}
                </ul>
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>
  </div>
</section>
