---
import experienceData from '../../data/experience.json';
---

<section id="experience" class="section bg-white">
    <div class="container">
        <h2 class="section-title">Experience</h2>
        <p class="section-subtitle max-w-2xl">
            Professional journey across different environments and industries.
        </p>
        
        <!-- Experience Grid - Larger Cards -->
        <div class="grid md:grid-cols-2 gap-6">
            {experienceData.experiences.map((exp) => (
                <div class="bg-neutral-50 p-6 md:p-8 rounded-2xl border border-neutral-200 hover:border-primary-200 transition-colors">
                    <!-- Header -->
                    <div class="flex items-start justify-between gap-4 mb-4">
                        <div>
                            <h3 class="font-bold text-xl text-neutral-900 mb-1">{exp.role}</h3>
                            <p class="text-primary-600 font-medium">{exp.company}</p>
                        </div>
                        <span class="badge badge-primary flex-shrink-0">{exp.context}</span>
                    </div>
                    
                    <!-- Meta -->
                    <div class="flex items-center gap-4 text-sm text-neutral-500 mb-5">
                        <span class="flex items-center gap-1">
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                            </svg>
                            {exp.location}
                        </span>
                        <span class="flex items-center gap-1">
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                            </svg>
                            {exp.period}
                        </span>
                    </div>
                    
                    <!-- Responsibilities -->
                    <ul class="space-y-2">
                        {exp.responsibilities.slice(0, 3).map((resp) => (
                            <li class="flex items-start gap-2 text-neutral-600 text-sm">
                                <svg class="w-4 h-4 text-primary-500 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                                </svg>
                                <span>{resp}</span>
                            </li>
                        ))}
                    </ul>
                </div>
            ))}
        </div>
    </div>
</section>
