---
import BaseLayout from "../layouts/BaseLayout.astro";
import BlogLinks from "../components/sections/BlogLinks.astro";

import siteData from "../data/site.json";

const title = `Blog | ${siteData.name}`;
const description =
    "Technical articles and insights on web development, Laravel, PHP, and software architecture.";
---

<BaseLayout title={title} description={description}>
    <!-- Page Header -->
    <section
        class="relative py-20 md:py-28 gradient-bg-animated overflow-hidden"
    >
        <!-- Decorative orbs -->
        <div class="floating-orb w-56 h-56 bg-secondary-400 -top-10 right-10">
        </div>
        <div
            class="floating-orb w-40 h-40 bg-primary-400 bottom-0 left-20"
            style="animation-delay: -4s;"
        >
        </div>

        <div class="container relative z-10 text-center">
            <h1
                class="text-4xl md:text-5xl lg:text-6xl font-bold bg-gradient-to-r from-neutral-900 via-neutral-800 to-neutral-900 bg-clip-text text-transparent mb-6"
            >
                Blog & Writing
            </h1>
            <p class="text-lg text-neutral-600 max-w-2xl mx-auto">
                Technical articles and insights I've published on various
                platforms. Click any article to read the full post on its
                original platform.
            </p>
        </div>
    </section>

    <!-- All Blog Links -->
    <BlogLinks showTitle={false} />
</BaseLayout>
