---
import BaseLayout from "../layouts/BaseLayout.astro";
import Skills from "../components/sections/Skills.astro";
import Experience from "../components/sections/Experience.astro";
import Contact from "../components/sections/Contact.astro";

import siteData from "../data/site.json";

const title = `About | ${siteData.name}`;
const description =
    "Learn more about my background, skills, and professional experience as a full-stack developer.";
---

<BaseLayout title={title} description={description}>
    <!-- Page Header -->
    <section
        class="py-12 md:py-16 bg-gradient-to-br from-neutral-50 to-neutral-100"
    >
        <div class="container">
            <h1 class="text-4xl md:text-5xl font-bold text-neutral-900 mb-4">
                About Me
            </h1>
            <p class="text-lg text-neutral-600 max-w-2xl">
                Get to know my professional background and what drives my work.
            </p>
        </div>
    </section>

    <!-- Bio Section -->
    <section class="section bg-white">
        <div class="container">
            <div class="grid lg:grid-cols-3 gap-12">
                <!-- Main Bio -->
                <div class="lg:col-span-2">
                    <h2 class="text-2xl font-bold text-neutral-900 mb-6">
                        Professional Summary
                    </h2>

                    <div class="prose prose-neutral max-w-none">
                        <p class="text-neutral-600 leading-relaxed mb-4">
                            Full-Stack Web Developer with nearly <strong
                                >6 years of experience</strong
                            > building scalable and maintainable web applications
                            across freelance, remote, and hybrid environments.
                        </p>

                        <p class="text-neutral-600 leading-relaxed mb-4">
                            Specialized in <strong>Laravel (PHP)</strong> with strong
                            front-end foundations and experience designing complete
                            systems — from responsive user interfaces to backend architecture,
                            APIs, and server infrastructure. Comfortable working with
                            SQL and NoSQL databases, modern DevOps workflows, and
                            microservices-based architectures.
                        </p>

                        <p class="text-neutral-600 leading-relaxed mb-4">
                            Focused on clean code, performance, and real-world
                            problem solving, with a strong habit of continuous
                            learning and technical documentation.
                        </p>

                        <h3
                            class="text-xl font-semibold text-neutral-900 mt-8 mb-4"
                        >
                            What I Focus On
                        </h3>

                        <ul class="space-y-2 text-neutral-600">
                            <li class="flex items-start gap-2">
                                <svg
                                    class="w-5 h-5 text-primary-500 flex-shrink-0 mt-0.5"
                                    fill="none"
                                    stroke="currentColor"
                                    viewBox="0 0 24 24"
                                >
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M5 13l4 4L19 7"></path>
                                </svg>
                                <span
                                    ><strong>Backend Development:</strong> PHP, Laravel,
                                    Livewire, Filament, Node.js, REST APIs, GraphQL</span
                                >
                            </li>
                            <li class="flex items-start gap-2">
                                <svg
                                    class="w-5 h-5 text-primary-500 flex-shrink-0 mt-0.5"
                                    fill="none"
                                    stroke="currentColor"
                                    viewBox="0 0 24 24"
                                >
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M5 13l4 4L19 7"></path>
                                </svg>
                                <span
                                    ><strong>Frontend Development:</strong> Vue 3,
                                    Alpine.js, JavaScript, Tailwind CSS, Bootstrap</span
                                >
                            </li>
                            <li class="flex items-start gap-2">
                                <svg
                                    class="w-5 h-5 text-primary-500 flex-shrink-0 mt-0.5"
                                    fill="none"
                                    stroke="currentColor"
                                    viewBox="0 0 24 24"
                                >
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M5 13l4 4L19 7"></path>
                                </svg>
                                <span
                                    ><strong>Microservices:</strong> Building distributed
                                    systems with Docker, Kafka, GraphQL API Gateways</span
                                >
                            </li>
                            <li class="flex items-start gap-2">
                                <svg
                                    class="w-5 h-5 text-primary-500 flex-shrink-0 mt-0.5"
                                    fill="none"
                                    stroke="currentColor"
                                    viewBox="0 0 24 24"
                                >
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M5 13l4 4L19 7"></path>
                                </svg>
                                <span
                                    ><strong>DevOps:</strong> Docker, CI/CD pipelines,
                                    AWS, Linux server management, Nginx</span
                                >
                            </li>
                        </ul>

                        <h3
                            class="text-xl font-semibold text-neutral-900 mt-8 mb-4"
                        >
                            Education
                        </h3>

                        <ul class="space-y-3 text-neutral-600">
                            <li>
                                <strong>MSc in Control Engineering</strong><br
                                />
                                <span class="text-sm text-neutral-500"
                                    >University of M'Hamed Bougara – IGEE · 2021
                                    - 2023</span
                                >
                            </li>
                            <li>
                                <strong
                                    >BS in Electronic and Electrical Engineering</strong
                                ><br />
                                <span class="text-sm text-neutral-500"
                                    >University of M'Hamed Bougara – IGEE · 2018
                                    - 2021</span
                                >
                            </li>
                        </ul>
                    </div>
                </div>

                <!-- Quick Info Sidebar -->
                <div>
                    <div
                        class="bg-neutral-50 rounded-xl p-6 border border-neutral-200 sticky top-24"
                    >
                        <h3 class="font-semibold text-neutral-900 mb-4">
                            Quick Info
                        </h3>

                        <div class="space-y-4">
                            <div>
                                <p class="text-sm text-neutral-500">Role</p>
                                <p class="font-medium text-neutral-900">
                                    {siteData.title}
                                </p>
                            </div>

                            <div>
                                <p class="text-sm text-neutral-500">Location</p>
                                <p class="font-medium text-neutral-900">
                                    {siteData.location}
                                </p>
                            </div>

                            <div>
                                <p class="text-sm text-neutral-500">
                                    Primary Stack
                                </p>
                                <p class="font-medium text-neutral-900">
                                    Laravel, Vue 3, PostgreSQL
                                </p>
                            </div>

                            <div>
                                <p class="text-sm text-neutral-500">
                                    Experience
                                </p>
                                <p class="font-medium text-neutral-900">
                                    6+ Years
                                </p>
                            </div>

                            <div>
                                <p class="text-sm text-neutral-500">
                                    Availability
                                </p>
                                <p class="font-medium text-green-600">
                                    Open to opportunities
                                </p>
                            </div>
                        </div>

                        <div class="mt-6 pt-6 border-t border-neutral-200">
                            <a
                                href="#contact"
                                class="btn btn-primary w-full justify-center"
                            >
                                Get in Touch
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <Skills />
    <Experience />
    <Contact />
</BaseLayout>
